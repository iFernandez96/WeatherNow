<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

<h1>Login</h1>
<br>
<div id="login-page">
    <div id="feedback" style="display: none; margin-bottom: 15px; padding: 10px;"></div>
    
    <form action="/login" method="POST">
        <div class="input-group">
            <label for="username">Username:</label>
            <div class="input-with-button">
                <input type="text" id="username" name="username" required>
                <button type="button" id="generateUsername">Generate Username</button>
            </div>
            <div id="generatedUsername" style="margin-top: 5px; font-weight: bold;"></div>
        </div>

        <div class="input-group">
            <label for="password">Password:</label>
            <div class="input-with-button">
                <input type="password" id="password" name="password" required>
                <button type="button" id="generatePassword">Generate Password</button>
            </div>
            <div id="generatedPassword" style="margin-top: 5px; font-weight: bold;"></div>
        </div>

        <button type="submit" class="submit-btn">Login</button>
    </form>
</div>

<script src="/js/script.js"></script>

