<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

<h1>Logged in as <%= username %>!</h1>
<!-- Preferences Form -->
 <div id="profile-page">
<form action="/profile" method="POST">
    <!-- Email -->
     <div>
        <label for="userEmail">Email:</label>
        <input type="text" id="userEmail" name="email" value="<%=email%>" required>
     </div>
    <!-- Temp Dropdown -->
    <div>
        <label for="tempDropdown">Temperature Unit:</label>
        <select id="tempDropdown" name="tempUnit">
            <option value="metric">Celsius</option>
            <option value="imperial">Fahrenheit</option>
        </select>
    </div>

    <!-- Saved Location -->
    <div>
        <label for="locationInput">Saved Location:</label>
        <input type="text" id="locationInput" name="savedLocation" placeholder="Enter your location" value="" required>
    </div>

    <!-- Background Image -->
    <div>
        <label for="bgImage">Background Image:</label>
        <select id="bgImage" name="backgroundImage">
            <option value="default">Default</option>
            <option value="sunset">Sunset</option>
            <option value="mountains">Mountains</option>
            <option value="cityscape">Cityscape</option>
        </select>
    </div>

    <!-- Submit or Save Preferences -->
    <div>
        <button type="submit">Save Preferences</button>
    </div>
</form>
</div>

<%- include("partials/footer.ejs") %>
