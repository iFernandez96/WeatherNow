<%
    let days = weather.timelines.daily;
    let unitType;
    if(units === "imperial"){
        unitType = "°F";
        windType = "mph";
    } else {
        unitType = "°C";
        windType = "kmh";
    }
%>

<div class="location-weather">
    <h2><%= location%><br> 7 Day Forecast</h2>

    <% for (let day of days) {
        let date = new Date(day.time)
    %>

    <div class="forecast-day">
        <p><h3><%= date.toLocaleDateString('en-US', { weekday: 'long' }); %></h3> </p>
        <p><strong>Temperature (Average): </strong> <%= day.values.temperatureAvg + " " + unitType %></p>
        <p><strong>Temperature (Max): </strong> <%= day.values.temperatureMax + " " + unitType %></p>
        <p><strong>Temperature (Min): </strong> <%= day.values.temperatureMin + " " + unitType %></p>
        <p><strong>Humidity:</strong> <%= day.values.humidityAvg + "%"%></p>
        <p><strong>Precipicipation Chance: </strong> <%=  day.values.precipitationProbabilityAvg + "%" %></p>
        <p><strong>Wind Speed: </strong> <%= day.values.windSpeedAvg + " " + windType %></p>
    </div>
    <br><br>
    <% } %>
</div>